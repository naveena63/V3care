<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/btn_start_location_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_50dp"
            android:background="@drawable/button_background"
            android:drawableRight="@drawable/ic_location_on_black_24dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Get Current Location"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_18sp" />

        <TextView
            android:id="@+id/location_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:fontFamily="@font/poppins_light"
            android:textAlignment="center"
            android:textColor="#333"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:text="Add Location"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/d_no_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/poppins"
            android:layout_margin="@dimen/margin_10dp"
            android:background="@drawable/edittext_bg"
            android:hint="D.No"/>
        <EditText
            android:id="@+id/land_mark_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:singleLine="true"
            android:fontFamily="@font/poppins"
            android:background="@drawable/edittext_bg"
            android:hint="Land Mark"/>
        <Button
            android:id="@+id/locationSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_margin="@dimen/dimen_15dp"
            android:padding="@dimen/dimen_5dp"
            android:text="submit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_18sp" />

    </LinearLayout>



